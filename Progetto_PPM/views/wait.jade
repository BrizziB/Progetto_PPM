extends layout

block head

	script(type='text/javascript' src='http://localhost:3000/socket.io/socket.io.js')
	script var socket=io(":3000/adminChan");
	script(type='text/javascript' src='/scripts/custom/redirect.js')

block content	
		#messaggioAttendere.ui-grid-a
			#welcome.ui-block-a.bloccoAttendere
					h1 Attendere prego!
					h2 rappresentazione in corso
					
			#titoloCateoria.ui-grid-a
				#titoloCat.ui-block-a.bloccoTitoloCategoria
					if(titolo)
						h4 Titolo della rappresenzatione :
							p.titolo=titolo
					if(categoria)
						h4 Categoria :
							p.categoria=categoria

			#conteggioFalliPunteggio.ui-grid-a
					#red.ui-block-a.bloccoPuntiFalli
						p
							span.titolo Squadra Rossa
							br
							span.titoloPunteggio Punti: 
							span.punteggio 42
							br
							span.titoloFalli Numero Falli: 
							span.falli 7
							br
							span.titoloPenalita Numero Penalita': 
							span.penalita 1
					#blue.ui-block-b.bloccoPuntiFalli
						p
							span.titolo Squadra Blu
							br
							span.titoloPunteggio Punti:
							span.punteggio 42
							br
							span.titoloFalli Numero Falli: 
							span.falli 7
							br
							span.titoloPenalita Numero Penalita': 
							span.penalita 1
							
		
		script(type='text/javascript', src='/scripts/custom/wait.js')
		script(type='text/javascript', src='/scripts/custom/fauls.js')

