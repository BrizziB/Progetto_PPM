extends layout

block head

	script(type='text/javascript' src='/socket.io/socket.io.js')
	script(type='text/javascript' src='/scripts/custom/redirect.js')

block content	
		#messaggioAttendere(class = 'centered')
			#welcome.bloccoAttendere
					h1 Attendere prego!
					h2=title
					
			#titoloCategoria(class = 'centered')
				#titoloCat.bloccoTitoloCategoria
					if(titolo)
						h4 Titolo della rappresentazione :
							p.titolo=titolo
					if(categoria)
						h4 Categoria :
							p.categoria=categoria

			#conteggioFalliPunteggio.ui-grid-a(class = 'centered')
					#red.ui-block-a.bloccoPuntiFalli
						p
							span.titolo Squadra Rossa
							br
							span.titoloPunteggio Punti: 
							span.punteggio 
							br
							span.titoloFalli Falli: 
							span.falli 
							br
							span.titoloPenalita Penalita': 
							span.penalita 
					#blue.ui-block-b.bloccoPuntiFalli
						p
							span.titolo Squadra Blu
							br
							span.titoloPunteggio Punti:
							span.punteggio 
							br
							span.titoloFalli Falli: 
							span.falli 
							br
							span.titoloPenalita Penalita': 
							span.penalita 
							
		
		script(type='text/javascript', src='/scripts/custom/wait.js')
		//-script(type='text/javascript', src='/scripts/custom/fauls.js')

